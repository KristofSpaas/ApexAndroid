<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context="com.groep9.apex.apexandroid.Start.StartFragment">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_start"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerVertical="true"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/standard_padding">

            <TextView
                android:id="@+id/tv_doelen_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/iv_doel_start"
                android:text="@string/DoelVandaag"
                android:textSize="@dimen/card_view_start_title_text_size" />

            <TextView
                android:id="@+id/tv_stappen_doel_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_doelen_start"
                android:layout_marginTop="@dimen/activity_vertical_margin_big"
                android:layout_toStartOf="@+id/iv_doel_start"
                android:textSize="@dimen/card_view_start_content_text_size" />

            <ImageView
                android:id="@+id/iv_doel_start"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_alignParentEnd="true"
                android:contentDescription="cardViewImage"
                android:src="@drawable/doel" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
